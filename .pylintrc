[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
# Disable specific warnings that are acceptable in this project
disable=
    C0301,  # Line too long (handled by formatter)
    W0718,  # Catching too general exception (acceptable in main functions)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

[DESIGN]
# Maximum number of arguments for function / method
max-args=7

# Maximum number of locals for function / method body
max-locals=20

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,df,cc,bc,f,db

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=REQUEST,acl_users,aq_parent
